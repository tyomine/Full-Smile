<div class="container">
  <div class="row">
    <div class="col text-center h2 mt-5">
      <strong>ユーザー投稿一覧</strong>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card-img-top shadow mt-3 mb-2">
          
          <div class="card-top text-center pt-3">
            <%= link_to admin_user_path(post.user.id) do %>
              <%= image_tag post.user.get_profile_image(60,60), class:"post-user-image" %>
            <% end %>
            <%= link_to admin_user_path(post.user.id) do %>
               <strong class="text-dark ml-3"><%= post.user.name %></strong>
            <% end %>
          </div>
          <div class="card-img-top text-center mt-2">
            <%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.image, size: "180x190" %>
            <% end %>  
          </div>
          <div class="card-body text-center">
            <div class="top">
              ♥<%= post.likes.count %>
              コメント数:<%= post.comments.count %>
            </div>
            <div class="card-title mt-2 h5">
              <%= link_to admin_post_path(post.id) do %>
                <strong class="text-dark"><%= post.title.truncate(10) %></strong>
              <% end %>
            </div>
            <p class="card-text">
              <%= post.body.truncate(10) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
