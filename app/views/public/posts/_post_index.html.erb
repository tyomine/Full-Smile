  <% posts.each do |post| %>
    <div class="col-md-4">
      <div class="card-img-top shadow mt-3 mb-2">
        
        <div class="form-inline">
          <div class="ml-5 mt-1">
            <%= link_to user_path(post.user_id) do %>
              <%= image_tag post.user.get_profile_image(60,60), class:"post-user-image" %>
            <% end %>
          </div>
          <div class="ml-3">
            <%= link_to user_path(post.user_id) do %>
              <strong class="text-dark"><%= post.user.name %></strong>
            <% end %> 
          </div>
        </div>

        <div class="card-body img-light text-center">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.image, size: "180x190" %>
          <% end %>
        </div>
        <div class="form-inline">
          <div class="likes_buttons_<%= post.id %> ml-5">
            <%= render 'public/likes/like', post: post %>
          </div>
          <div class="ml-4">
            コメント数:<%= post.comments.count %>
          </div>
        </div>
        <div class=" ml-5">
          <%= link_to post_path(post.id) do %>
            <strong class="text-dark"><%= post.title.truncate(10) %></strong>
          <% end %>
        </div>
        <div class="ml-5">
          <%= link_to post_path(post.id) do %>
            <strong class="text-dark"><%= post.body.truncate(10) %></strong>
          <% end %>
        </div>
      </div>
    </div>  
  <% end %>