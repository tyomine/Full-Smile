<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="text-center mt-5">通知</h3>
      <%= link_to destroy_all_user_notifications_path, method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h6 style="color: black;">全削除</h6>
      <% end %>
      <hr>
      <% if @notifications.exists? %>
        <div class="users-index">
          <% @notifications.each do |notification| %>
            <%= render partial: 'notification', locals: { notification: notification, user: @user } %>
          <% end %>
        </div>
      <% else %>
        <p>通知はありません</p>
      <% end %>
    </div>
  </div>
  <div class="row mx-auto text-center mt-2 mb-3">
    <div class="col">
      <%= paginate @notifications %>
    </div>
  </div>
</div>