
  
    <% if users.exists? %>
      <table class='table table-hover table-inverse mx-auto test-box col-12'>
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>フォロー数</th>
            <th>フォローワー数</th>
          </tr>
        </thead>
        <% users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(60,60), class:"post-user-image" %>
              <% end %>  
            </td>
            <td>
              <%= link_to user_path(user) do %>
                <strong class="text-dark"><%= user.name %></strong>
              <% end %>
            </td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    <% else %>
      <h3 class="text-center m-5">
        <strong>ユーザーはいません</strong>
      </h2>
    <% end %>
    <%= paginate @users %>
