
  <table>
    <% if users.exists? %>
      <% users.each do |user| %>
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>フォロー数</th>
            <th>フォローワー数</th>
          </tr>
        </thead>
        <tbody class="text-center">
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td><%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
          </tr>
        </tbody>
      <% end %>
    <% else %>
      <h2>
        <strong>ユーザーはいません</strong>
      </h2>
    <% end %>
  </table>
