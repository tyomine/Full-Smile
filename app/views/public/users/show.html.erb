<div class="container">
  <div class="row">
    <div class="col-4 text-right">
      <%= image_tag @user.get_profile_image(200,200), class:"mt-3 rounded-circle"; %>
    </div>
    <div class="col-8 text-center">
      <table>
        <tbody>
          <tr>
            <th></th>
            <td class="h4 font-weight-bold"><%= @user.name %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th></th>
            <td>
              <% if current_user == @user && @user.name != "guestuser" %>
                <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-success" %>
              <% end %>  
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4 h4 text-right font-weight-bold">
      <p>投稿数</p>
    </div>
    <div class="col-4 h4 text-center font-weight-bold">
      <p>フォロー数</p>
    </div>
    <div class="col-4 h4 text-left font-weight-bold">
      <p>フォローワー数</p>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-img-top">
            <%= image_tag post.image, size: "348x300" %>
          </div>
          <div class="card-body text-center">
            <div class="card-top">
              ♥<%= post.likes.count %>
              コメント数:<%= post.comments.count %>
            </div>
            <h5 class="card-title font-weight-bold">
              <%= post.title %>
            </h5>
            <p class="card-text">
              <%= post.body %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
