<div class="container">
  <div class="row my_page">
    <div class="col-4 mt-5 text-center">
      <%= image_tag @user.get_profile_image(200,200), class:"user-image" %>
      <div class="h3 font-weight-bold m-3">
        <%= @user.name %>
      </div>
    </div>
    <div class="col-8 form-inline">
      <% if @user.name != "guestuser" %>
        <div class="mt-2 mr-3">
          <%= link_to "いいね一覧", likes_user_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-2 mr-3">
          <%= link_to "フォロー一覧", user_followings_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-2 mr-3">
          <%= link_to "フォローワー一覧", user_followers_path(@user.id), class: "btn btn-outline-info" %><br>
        </div>
        <div class="mt-2 mr-3">
          <% if unchecked_notifications.any? %>
           <i class="fa fa-circle" style="color: #black;"></i>
          <% end %>
          <%= link_to "通知", user_notifications_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-2 mr-3">
          <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-2 mr-3">
          <%= link_to "新規投稿", new_post_path, class: "btn btn-outline-info" %>
        </div>
      <% end %>
    </div> 
  </div>

  <div class="row">
    <div class="col text-center h2 mt-5 bg-light">
      <strong>みんなの投稿一覧</strong>
    </div>
  </div>

  <div class="row">
    <%= render "post_index", posts: @posts %>
  </div>
  
  <div class="row mx-auto text-center mt-2 mb-3">
    <div class="col">
      <%= paginate @posts %>
    </div>
  </div>
</div>
