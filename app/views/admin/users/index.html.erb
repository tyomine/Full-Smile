<div class="container">
  <div class="row">
    <div class="h2 text-center col-12">
      ユーザー一覧画面
    </div>
  </div>
  <div class="row">
    <table class='table table-hover table-inverse mx-auto test-box col-12'>
      <thead class="h4">
        <th></th>
        <th>登録日</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
      </thead>
      <% @users.each do |user| %>
      <tbody class="h4">
        <td><%= image_tag user.get_profile_image(70,70) %></td>
        <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
