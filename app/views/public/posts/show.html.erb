<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag @post.image, size: "500x400" %>
    </div>
  </div>
  <div class="row">
    <table>
      <tbody>
        <tr>
          <th>タイトル：</th>
          <td><%= @post.title %></td>
        </tr>
        <tr>
          <th>内容</th>
          <td><%= @post.body %></td>
        </tr>
        <tr>
          <th>投稿日:</th>
          <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

