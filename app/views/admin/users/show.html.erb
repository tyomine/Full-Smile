<div class="container">
  <div class="row mt-5">
    <div class="col-4 text-right">
      <%= image_tag @user.get_profile_image(200,200), class:"user-image" %>
    </div>
    <div class="col-8 text-center">
      <div class="h4 font-weight-bold">
        <%= @user.name %>
      </div>
      <div class="mt-3">
        <%= @user.introduction %>
      </div>
      <div class="mt-3">
        <% if @user.is_deleted == true %>
          <p class="font-weight-bold"></p>退会済みです</p>
        <% else %>
          <%= link_to "ステータスを更新する",edit_admin_user_path(@user), class: "btn btn-danger", 'data-turbolinks': false %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row bg-light text-center mt-3">
    <div class="col-4 h4 font-weight-bold pt-3">
      <p>投稿数</p>
      <p><%= @user.posts.count %></p>
    </div>
    <div class="col-4 h4 font-weight-bold pt-3">
      <p>フォロー</p>
      <p><%= @user.followings.count %></p>
    </div>
    <div class="col-4 h4 font-weight-bold pt-3">
      <p>フォロワー</p>
      <p><%= @user.followers.count %></p>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-2 mt-3 ">
        <div class="card shadow">
          <%= render "admin/homes/post", post: post %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col text-cennter">
      <%= paginate @posts %>
    </div>
  </div>
</div>