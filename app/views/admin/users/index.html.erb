<div class="container">
  <div class="row">
    <div class="h2 text-center col mt-5">
      <strong>ユーザー一覧画面</strong>
    </div>
  </div>
  <div class="row mt-3">
    <table class='table table-hover table-inverse mx-auto test-box col-12'>
      <thead class="h4">
        <th></th>
        <th>登録日</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
      </thead>
      <% @users.each do |user| %>
      <tbody class="h4">
        <td>
          <%= image_tag user.get_profile_image(60,60), class:"post-user-image" %>
        </td>
        <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
      </tbody>
      <% end %>
    </table>
    <div class="mb-3">
      <%= paginate @users %>      
    </div>
  </div>
</div>
