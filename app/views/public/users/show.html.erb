<div class="container">
  <div class="row">
    <div class="col text-center h2 mt-5">
      <strong>プロフィール</strong>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4 text-right">
      <%= image_tag @user.get_profile_image(200,200), class:"user-image" %>
    </div>
    <div class="col-8 text-center">
      <div class="h4 font-weight-bold">
        <%= @user.name %>
      </div>
      <div class="mt-3">
        <% if current_user == @user && @user.name != "guestuser" %>
          <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-success" %>
        <% elsif (current_user != @user) && (current_user.name != "guestuser") %>
          <%= render "public/relationships/btn", user: @user %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= @user.introduction %>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4 h4 text-right font-weight-bold">
      <p>投稿数</p>
      <p class="mr-4"><%= @user.posts.count %></p>
    </div>
    <div class="col-4 h4 text-center font-weight-bold">
      <p>フォロー</p>
      <p><%= @user.followings.count %></p>
    </div>
    <div class="col-4 h4 text-left font-weight-bold">
      <p>フォローワー</p>
      <p class="ml-5"><%= @user.followers.count %></p>
    </div>
  </div>
  <div class="row">
    <%= render "public/posts/post_index", posts: @posts %>
  </div>
  <div class="row">
    <div class="col text-center mt-3 mb-3">
      <%= paginate @posts %>
    </div>
  </div>
</div>
