<div class="container">
  <div class="flash-notifications">
  </div>
  <div class="row">
    <div class="card col-3 text-center">
      <div class="card-img-top text-center mt-5">
        <%= image_tag @user.get_profile_image(200,200), class:"user-image" %>
      </div>
      <div class="card-body">
        <div class="h3 font-weight-bold">
          <%= @user.name %>
        </div>
        <% if @user.name != "guestuser" %>
        <div class="mt-5">
          <%= link_to "いいね一覧", likes_user_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-3">
          <%= link_to "フォロー一覧", user_followings_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-3">
          <%= link_to "フォローワー一覧", user_followers_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-3">
          通知
        </div>
        <div class="mt-3">
          <%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-outline-info" %>
        </div>
        <div class="mt-3">
          <%= link_to "新規投稿", new_post_path, class: "btn btn-outline-info" %>
        </div>
        <% end %>
      </div> 
    </div>
    <div class="col-9">
      <% @posts.each do |post| %>
      <div class="card">
        <div class="card-img-top text-center">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.image, size: "550x450" %><br>
        <% end %>
        </div>
        <div class="card-body img-light">
          <div class="form-inline">
            <div class="ml-5">
              <%= link_to user_path(post.user_id) do %>
                <%= image_tag post.user.get_profile_image(70,70), class:"post-image" %>
              <% end %>
            </div>
            <div class="ml-3 mr-5">
              <%= link_to user_path(post.user_id) do %>
                <strong class="text-dark"><%= post.user.name %></strong>
              <% end %> 
            </div>
            <!--いいね機能で部分的に更新したい場所-->
            <div class="likes_buttons_<%= post.id %> ml-5">
              <%= render 'public/likes/like', post: post %>
            </div>
            <div class="ml-4">
              コメント数:<%= post.comments.count %>
            </div>
          </div>
          <div class="mt-3 ml-5">
            タイトル:
            <%= link_to post_path(post.id) do %>
              <strong class="text-dark"><%= post.title %></strong>
            <% end %>
          </div>
          <div class="ml-5 mt-2">
            <%= post.body.truncate(35) %>
          </div>
        </div>
      </div>  
      <% end %>
    </div>
  </div>
</div>
