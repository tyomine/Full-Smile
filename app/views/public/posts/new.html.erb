<div class="container">
  <div Class="mx-auto mt-5 mb-5">
    <div class="row">
      <div class="col">
        <h1 class="text-center">新規投稿</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center mt-5">
      <%= render "public/posts/error", post: @post %>
    </div>
  </div>
  <div class="row">
      <div class="col">
        <%= form_with model: @post, url: posts_path, class: "form-horizontal", method: :post do |f| %>
        <div class="form-group form-layout">
          <table class="text-center w-75 mt-5">
            <tbody>
              <tr>
                <th><%= f.label :画像 %></th>
                <td><%= f.file_field :image, accept: "image/*" %></td>
              </tr>
              <tr>
                <th><%= f.label :タイトル %></th>
                <td><%= f.text_field :title, class:"form-control" %></td>
              </tr>
              <tr>
                <th><%= f.label :内容 %></th>
                <td><%= f.text_area :body, rows:'3', class:"form-control" %></td>
              </tr>
              <tr>
                <th></th>
                <td><%= f.submit "投稿する", class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
          </div>
        <% end %>
      </div>
  </div>


